# ============================================
# 应用配置
# ============================================
NODE_ENV=development
APP_URL=http://localhost:5173
API_URL=http://localhost:3000
PORT=3000

# ============================================
# 数据库配置
# ============================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_content
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_content
DB_USER=postgres
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# JWT 认证
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# AI API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=sk-openai-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-anthropic-key-here

# 阿里云通义千问
QIWEN_API_KEY=sk-qiwenn-key-here
QIWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1

# 百度文心一言
WENXIN_API_KEY=xxx
WENXIN_SECRET_KEY=xxx

# 字节豆包
DOUBAO_API_KEY=xxx
DOUBAO_API_BASE=https://ark.cn-beijing.volces.com/api/v3

# ============================================
# 支付配置
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_stripe_publishable_key

# 微信支付
WECHAT_PAY_MCHID=xxx
WECHAT_PAY_KEY=xxx
WECHAT_PAY_CERT_PATH=/path/to/cert
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/api/webhooks/wechat

# 支付宝
ALIPAY_APP_ID=xxx
ALIPAY_PRIVATE_KEY=xxx
ALIPAY_PUBLIC_KEY=xxx

# ============================================
# 邮件配置
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=AI内容平台 <noreply@your-domain.com>

# ============================================
# 阿里云 OSS (可选)
# ============================================
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=xxx
OSS_ACCESS_KEY_SECRET=xxx
OSS_BUCKET=your-bucket-name

# ============================================
# 监控与日志 (可选)
# ============================================
# Sentry
SENTRY_DSN=https://xxx@sentry.io/xxx

# 日志级别: debug | info | warn | error
LOG_LEVEL=info

# ============================================
# 安全配置
# ============================================
# CORS 允许的域名
CORS_ORIGIN=http://localhost:5173,https://your-domain.com

# 速率限制 (每分钟请求次数)
RATE_LIMIT_PER_MINUTE=60

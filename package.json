{
  "name": "ai-content-platform",
  "version": "1.0.0",
  "private": true,
  "description": "AI 内容生成平台 - 将想法转化为高质量推文和公众号文章",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "db:studio": "pnpm --filter backend db:studio",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "typecheck": "pnpm --filter frontend typecheck && pnpm --filter backend typecheck",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "content-generation",
    "saas",
    "openai",
    "claude",
    "社交媒体"
  ],
  "author": "Your Name",
  "license": "MIT"
}
